<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>InstaFeed</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/form.css">
  </head>
  <body>
<!-- ******************************************************************* -->
<!--Setting Page -->
  <div class="settingContainer">
      <label for="tab-1" class="tab">Update Your Personal Information</label>
      <div class="login-form">
        <div class="sign-in-htm">
          {{#if error_msg}}
            <div class="alert alert-danger">{{error_msg}}</div>
          {{/if}}
          {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
          {{/if}}
          {{#if success_msg}}
            <div class="alert alert-success">{{success_msg}}</div>
          {{/if}}
          <form method="post" action="/setting/{{username}}" role="form">
          <!-- <div class="group form-group"> -->
            <!-- <label for="avatar" class="label">Avatar</label> -->
            <!-- <div class="change_ava"><img border="0" src="{{avatar}}" width="120" height="100"></div> -->
            <!-- <input type="checkbox" class="form-control" name="avatar"> -->
          <!-- </div> -->
          <div class="group form-group">
            <!-- <label for="usrname" class="label">Username</label> -->
            <input type="text" class="form-control" name="username" placeholder="Enter username">
          </div>
          <div class="group form-group">
            <!-- <label for="psw" class="label">Password</label> -->
            <input type="text" class="form-control input" name="password" data-type="password" placeholder="Enter password">
          </div>
          <div class="group form-group">
            <!-- <label for="con-psw" class="label">Confirm Password</label> -->
            <input type="text" class="form-control" name="password2" data-type="password" placeholder="Enter password again">
          </div>
          <div class="group">
            <input type="submit" class="waves-effect waves-light btn update_btn" value="Update">
          </div>
          </form>
        </div>
      </div>
  </div>
<!-- ******************************************************************* -->    
    <script type="text/javascript" src="/js/materialize.min.js"></script>
    <script src="/js/tether.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/js/user.js" type="text/javascript"></script>
  </body>
</html>