<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>InstaFeed</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/animate.css/3.2.0/animate.min.css">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script src="/js/particleground.js"></script>
    <script src="/js/particle.js"></script>
  </head>
  <body>
      <nav>
        <div class="nav-wrapper">
          {{#if user}}
          <a class="brand-logo" id="nav-title" href="/feed/{{user.username}}">InstaFeed</a>
          {{/if}}
          <a href="#" data-activates="mobile" class="button-collapse"><i class="material-icons">menu</i></a> 
            <ul class="right hide-on-med-and-down">
              {{#if user}}
              <li role="presentation"><img src="{{user.avatar}}" width="50" height="50"></img></li>
              <li role="presentation"><a class="nav-link" href="/{{user.username}}/favorite">Favourite</a></li>
              <li role="presentation"><a class="nav-link" href="/setting/{{user.username}}">Profile Setting</a></li>
              <li role="presentation"><a class="nav-link" href="/logout">Log Out</a></li>
              {{else}}
              <li role="presentation"><a class="nav-link" href="/">Home</a></li>
              <li role="presentation"><a class="nav-link" id="signinLink" href="/signin">Sign In</a></li>
              <li role="presentation"><a class="nav-link" id="signupLink" href="/signup">Sign Up</a></li>
              {{/if}}
            </ul>
            <ul class="side-nav" id="mobile">
              {{#if user}}
              <li role="presentation"><img src="{{user.avatar}}" width="50" height="50"></img></li>
              <li role="presentation"><a class="nav-link" href="/{{user.username}}/favorite">Favourite</a></li>
              <li role="presentation"><a class="nav-link" href="/setting/{{user.username}}">Profile Setting</a></li>
              <li role="presentation"><a class="nav-link" href="/logout">Log Out</a></li>
              {{else}}
              <li role="presentation"><a class="nav-link" href="/">Home</a></li>
              <li role="presentation"><a class="nav-link" id="signinLink" href="/signin">Sign In</a></li>
              <li role="presentation"><a class="nav-link" id="signupLink" href="/signup">Sign Up</a></li>
              {{/if}}
            </ul>            
        </div>
      </nav>
      <div class="container1">
          <div class="renderBody">
            {{#if user}}
            {{else}}
            <section class="bg"></section>
            {{/if}}
            {{{body}}}
<!--             <footer class="footer">
              &copy; 2017 InstaFeed, Inc.
            </footer> -->
          </div>
      </div>
    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="/js/materialize.min.js"></script>
    <script src="/js/animatedModal.js" type="text/javascript"></script>
    <script src="/js/tether.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/js/user.js" type="text/javascript"></script>
  </body>
</html>
