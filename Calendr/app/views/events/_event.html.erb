<!-- Describes what should be shown when calling < %= render event %> -->

<div class="upcoming-event">
	<div class="modal-header">
		<h4 class="modal-title"><%= event.title %></h4>
	</div>
	<div class="modal-body">
		Start date: <%= event.start.strftime('%B %-d, %Y @ %l:%M %p') %><br>
		End date: <%= event.end.strftime('%B %-d, %Y @ %l:%M %p') %> <br>
		<% unless event.location.nil? || event.location.empty? %>
			Location: <%= event.location %><br>
		<% end %>
		<% unless event.notes.nil? || event.notes.empty? %>
			Notes: <%= event.notes %><br>
		<% end %>
	</div>
	<div class="modal-footer">
		<%= link_to "Edit", edit_user_event_path(user_id: current_user, id: event.id), remote: true, :class => 'btn btn-default' %>
		<%= link_to "Delete", user_event_path(user_id: current_user, id: event.id), remote: true, method: :delete, :class => 'btn btn-default' %>
		<% unless event.location.nil? || event.location.empty? %>
			<%= link_to "Location", location_path(user_id: current_user, id: event.id), remote: true, :class => 'btn btn-default' %>
		<% end %>
	</div>
</div>